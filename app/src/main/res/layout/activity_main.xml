<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.markojerkovic.three_activity.MainActivity">

    <TextView
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:text="Activity 1"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/string_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="81dp"
        android:text="String 1:"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/string_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="32dp"
        android:text="String 2:"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/string_view_1"
        app:layout_constraintTop_toBottomOf="@+id/string_view_1" />

    <TextView
        android:id="@+id/string_view_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="String 3:"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/string_view_2"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/string_view_2" />

    <EditText
        android:id="@+id/edit_text_1"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        app:layout_constraintBaseline_toBaselineOf="@+id/string_view_1"
        app:layout_constraintLeft_toRightOf="@+id/string_view_1" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="adad"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/string_view_2"
        app:layout_constraintLeft_toRightOf="@+id/string_view_2" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/string_view_3"
        app:layout_constraintLeft_toRightOf="@+id/string_view_3" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:onClick="onEnter"
        android:text="Enter"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_1"
        app:layout_constraintLeft_toRightOf="@+id/edit_text_1"
        tools:layout_editor_absoluteY="123dp" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:onClick="goActTwo"
        android:text="Go"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_2"
        app:layout_constraintLeft_toLeftOf="@+id/button_1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginLeft="0dp"
        android:onClick="goActThree"
        android:text="Go"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_3"
        app:layout_constraintLeft_toLeftOf="@+id/button_2" />

</android.support.constraint.ConstraintLayout>
